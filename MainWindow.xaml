<Window x:Class="gui_calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui_calc"
        mc:Ignorable="d"
        Title="gui_calc" Height="450" Width="800" Foreground="#FF2D238B">
	<Window.Resources>
		<Style x:Key="baseButton" TargetType="Button">
			<Setter Property="Height" Value="35" />
			<Setter Property="Width" Value="100" />
			<Setter Property="HorizontalAlignment" Value="Left" />
			<Setter Property="VerticalAlignment" Value="Top" />
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="Background" Value="#1B1B1B" />
			<Setter Property="FontSize" Value="30" />
		</Style>
		<Style x:Key="numberButton" TargetType="Button" BasedOn="{StaticResource baseButton}">
			<Setter Property="Background" Value="Black" />
			<Setter Property="FontSize" Value="20" />
		</Style>
		<Style TargetType="TextBlock">
			<Setter Property="TextWrapping" Value="Wrap" />
			<Setter Property="VerticalAlignment" Value="Top" />
			<Setter Property="TextAlignment" Value="Right" />
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="Foreground" Value="White" />
		</Style>
		<Style TargetType="ListBoxItem">
			<Setter Property="VerticalAlignment" Value="Top" />
			<Setter Property="FontFamily" Value="Arial" />
			<Setter Property="Foreground" Value="White" />
			<Setter Property="Padding" Value="5, 5, 5, 5" />
			<Setter Property="HorizontalContentAlignment" Value="Right" />
			<Setter Property="FontSize" Value="20" />
		</Style>
	</Window.Resources>
	<Grid Background="#343434">
		<TextBlock x:Name="CurrentCalculation" Margin="100,115,289,0" Text="" Height="20" Width="403" Padding="0, 5, 15, 0" FontSize="15" />
		<TextBlock x:Name="CurrentNumber" Margin="100,140,289,0" Text="0" Height="45" Width="403" Padding="0, 5, 15, 0" FontSize="30" />

		<Button x:Name="Number1" Content="1" Margin="100,298,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="Number2" Content="2" Margin="201,298,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="Number3" Content="3" Margin="302,298,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="Number4" Content="4" Margin="100,262,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="Number5" Content="5" Margin="201,262,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="Number6" Content="6" Margin="302,262,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="Number7" Content="7" Margin="100,226,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="Number8" Content="8" Margin="201,226,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="Number9" Content="9" Margin="302,226,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="PlusMinus" Content="+/-" Margin="100,334,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="Number0" Content="0" Margin="201,334,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>
		<Button x:Name="Decimal" Content="." Margin="302,334,0,0" Style="{StaticResource numberButton}" Click="NumberClick"/>

		<Button x:Name="Divide" Content="&#x00F7;" Margin="403,226,0,0" Style="{StaticResource baseButton}" Click="OperatorClick"/>
		<Button x:Name="Multiply" Content="&#x00D7;" Margin="403,262,0,0" Style="{StaticResource baseButton}" Click="OperatorClick"/>
		<Button x:Name="Minus" Content="&#x2212;" Margin="403,298,0,0" Style="{StaticResource baseButton}" Click="OperatorClick"/>
		<Button x:Name="Plus" Content="+" Margin="403,334,0,0" Style="{StaticResource baseButton}" Click="OperatorClick"/>
		<Button x:Name="Equal" Content="=" Margin="100,370,0,0" Style="{StaticResource baseButton}" Width="403" Click="OperatorClick"/>

		<Button x:Name="Clear" Content="C" Margin="302,190,0,0" Style="{StaticResource baseButton}" FontSize="20" Click="NumberClick"/>
		<Button x:Name="Backspace" Content="&#x232B;" Margin="403,190,0,0" Style="{StaticResource baseButton}" FontSize="20" Click="NumberClick"/>

		<ListBox x:Name="CalculationHistory" HorizontalAlignment="Left" Height="254" Margin="508,115,0,0" VerticalAlignment="Top" Width="275" Background="#343434" Foreground="White" BorderThickness="0">
		</ListBox>
	</Grid>
</Window>
