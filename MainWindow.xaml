<Window x:Class="gui_calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gui_calc"
        mc:Ignorable="d"
        Title="gui_calc" Height="450" Width="800" Foreground="#FF2D238B">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="19*"/>
			<ColumnDefinition Width="245*"/>
		</Grid.ColumnDefinitions>
		<Button x:Name="Number1" Content="1" HorizontalAlignment="Left" Margin="40,320,0,0" VerticalAlignment="Top" Width="99" Height="36" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="Number2" Content="2" HorizontalAlignment="Left" Margin="140,320,0,0" VerticalAlignment="Top" Width="99" Height="36" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="Number3" Content="3" HorizontalAlignment="Left" Margin="240,320,0,0" VerticalAlignment="Top" Width="100" Height="36" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="Number4" Content="4" HorizontalAlignment="Left" Margin="40,283,0,0" VerticalAlignment="Top" Width="99" Height="36" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="Number5" Content="5" HorizontalAlignment="Left" Margin="140,283,0,0" VerticalAlignment="Top" Width="99" Height="36" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="Number6" Content="6" HorizontalAlignment="Left" Margin="240,283,0,0" VerticalAlignment="Top" Width="100" Height="36" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="Number7" Content="7" HorizontalAlignment="Left" Margin="40,245,0,0" VerticalAlignment="Top" Width="99" Height="37" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="Number8" Content="8" HorizontalAlignment="Left" Margin="140,245,0,0" VerticalAlignment="Top" Width="99" Height="37" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="Number9" Content="9" HorizontalAlignment="Left" Margin="240,245,0,0" VerticalAlignment="Top" Width="100" Height="37" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="PlusMinus" Content="+/-" HorizontalAlignment="Left" Margin="40,357,0,0" VerticalAlignment="Top" Width="99" Height="36" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="Number0" Content="0" HorizontalAlignment="Left" Margin="140,357,0,0" VerticalAlignment="Top" Width="99" Height="36" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<Button x:Name="Decimal" Content="." HorizontalAlignment="Left" Margin="240,357,0,0" VerticalAlignment="Top" Width="100" Height="36" FontSize="20" FontFamily="Arial" Grid.Column="1" Click="Button_Click"/>
		<TextBlock x:Name="CurrentNumber" Grid.Column="1" HorizontalAlignment="Left" Margin="40,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="39" Width="300" FontSize="20" TextAlignment="Right"/>
	</Grid>
</Window>
